<h1>Games</h1>
<% @games.each do |game| %>
  <h2><%= game.title %></h2>
  <p><strong>Price:</strong> <%= number_to_currency game.price %></p>
  <p><strong>Quantity:</strong> <%= number_to_currency game.stock_quantity %></p>
  <a href="/games/<%= game.id %>"></a>
  <%= link_to 'Details', game %>
  <!--<%= link_to 'Details', game_path(game) %> <%= link_to 'Details', game_path(id: game.id) %>-->
<% end %>
